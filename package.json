{
  "name": "lumex",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "pnpm --filter './packages/*' prepack",
    "cleanup": "rimraf --glob 'packages/*/{node_modules,dist}' 'examples/*/node_modules' 'node_modules'",
    "coverage": "vitest run --coverage",
    "dev:prepare": "pnpm -r --filter './packages/*' --parallel prepack --stub",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prepare": "husky",
    "publish": "pnpm --filter './packages/*' --access=public publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/node": "^24.5.2",
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "tsdown": "^0.15.4",
    "typescript": "~5.8.0",
    "vitest": "^3.0.7"
  },
  "resolutions": {
    "@lumex/cli": "workspace:*",
    "lumex": "workspace:*"
  },
  "volta": {
    "node": "24.8.0",
    "pnpm": "10.17.0"
  }
}

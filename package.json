{
  "name": "lumex",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "pnpm --filter './packages/*' prepack",
    "cleanup": "rimraf --glob '{docs,examples,packages}/*/{node_modules,dist}' 'node_modules'",
    "coverage": "vitest run --coverage",
    "dev": "pnpm -r --filter './packages/*' --parallel prepack --watch",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prepare": "husky",
    "publish": "pnpm --filter './packages/*' --access=public publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "husky": "catalog:",
    "lumex": "workspace:*",
    "rimraf": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "volta": {
    "node": "24.11.1",
    "pnpm": "10.23.0"
  }
}

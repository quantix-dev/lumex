{
  "name": "lumina",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.2",
  "private": true,
  "description": "Lumina is a free and open-source discord bot framework focused on type-safety and ease of use.",
  "author": "quantix-dev",
  "license": "LGPL-3.0-or-later",
  "homepage": "https://lumina.quantix.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quantix-dev/lumina.git"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "scripts": {
    "build": "pnpm --filter './packages/**' prepack",
    "cleanup": "rimraf 'packages/**/node_modules' 'node_modules'",
    "coverage": "vitest run --coverage",
    "dev:prepare": "pnpm -r --filter './packages/**' --parallel prepack --stub",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "prepare": "husky",
    "publish": "pnpm --filter './packages/**' --access=public publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@types/node": ">=20.14.0"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@types/node": "^22.7.8",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^0.1.2",
    "husky": "^9.1.6",
    "@lumina/core": "workspace:*",
    "@lumina/cli": "workspace:*",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "resolutions": {
    "@lumina/core": "workspace:*",
    "@lumina/cli": "workspace:*"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "eslint --cache --fix"
    ]
  },
  "volta": {
    "node": "20.18.0",
    "pnpm": "9.12.2"
  }
}

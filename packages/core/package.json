{
  "name": "lumex",
  "type": "module",
  "version": "0.1.0",
  "description": "Lumex is a free and open-source discord bot framework focused on type-safety and ease of use.",
  "author": "quantix-dev",
  "license": "LGPL-3.0-or-later",
  "homepage": "https://lumex.quantix.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quantix-dev/lumex.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/quantix-dev/lumex/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./config": {
      "types": "./dist/config.d.mts",
      "import": {
        "types": "./dist/config.d.mts",
        "default": "./dist/config.mjs"
      }
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "lumex": "./bin/lumex.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "prepack": "tsdown"
  },
  "peerDependencies": {
    "discord.js": ">= 14 < 15"
  },
  "dependencies": {
    "@lumex/cli": "workspace:*",
    "c12": "catalog:",
    "scule": "catalog:"
  },
  "devDependencies": {
    "tsdown": "catalog:"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
